    <image src="../imges/logo.png" style="width:140px;height:140px;margin-top: 30px;margin-bottom:30px;"></image>
    <button bindtap="login" class="btn" openType="button">学员登录</button>
</view>
<view class="content">
    <view class="adminview">
        <view style="display: flex;flex-direction: row-reverse;">
